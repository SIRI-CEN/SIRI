					<xsd:documentation>TPEG Pts43_2, minor delays</xsd:documentation>
				</xsd:annotation>
			</xsd:enumeration>
			<xsd:enumeration value="majorDelays">
				<xsd:annotation>
					<xsd:documentation>TPEG Pts43_3, major delays</xsd:documentation>
				</xsd:annotation>
			</xsd:enumeration>
			<xsd:enumeration value="operationTimeExtension">
